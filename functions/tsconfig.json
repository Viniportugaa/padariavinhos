{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src"]
}
